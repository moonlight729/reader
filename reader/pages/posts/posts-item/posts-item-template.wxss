.post-container {
  width:100%;
  display: felx;
  flex-direction: column;
  border-top: 30rpx solid #eee;
}

.post-author-date {
/* image text 都不是块状元素，会并列显示
  1.设置一个实体的盒子，里面放置元素，对盒子内元素进行布局（有点繁杂）
  2.由内部元素（图片、文字）撑开元素，笔记简便
*/
  margin: 10rpx 0 2rpx 10rpx;
}
.post-author {
  width:100rpx;
  height:100rpx;
  margin-top:20rpx;
  margin-left:10rpx;
  vertical-align: middle;
}

.post-date {
  margin-left:50rpx;
  margin-bottom:10px;
  vertical-align: middle;
  font-size:26rpx; 
}

.post-title{
  font-size:36rpx;
  margin-left:10px;
  margin-bottom:10px;
  font-weight: 600;
  color: #333;
  
}
.post-image {
  margin-top:10px;
  width:100%;
  height:340rpx;
  margin-bottom:10px;
  z-index: -99;
}
.post-content {
  font-size:30rpx;
  color:#666;
  font-family:MicroSoft Yahei;
  margin-left:30rpx;
  letter-spacing: 2rpx;
}

.post-like {
  display: flex;
  flex-direction: row;
  width:100%;
  height:30rpx;
  margin-bottom:20rpx;

}

.post-like-image {
  vertical-align: middle;
  width:30rpx;
  height:30rpx;
  margin-left:5rpx;
  margin-right: 6rpx;
}

.post-like-content {
  height:50rpx;
  width:50rpx;
  vertical-align: middle;
  font-size:26rpx;
  margin-right:20rpx;
}